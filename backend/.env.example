# CivicAgent Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ===== Supabase Configuration =====
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===== Google Gemini AI Configuration =====
GEMINI_API_KEY=your_gemini_api_key

# ===== Brevo Email Service =====
BREVO_API_KEY=your_brevo_api_key
BREVO_SENDER_EMAIL=your_sender_email@domain.com
BREVO_SENDER_NAME=CivicAgent System

# ===== JWT Configuration =====
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# ===== Application Settings =====
DEBUG=False
APP_NAME=CivicAgent API
APP_VERSION=1.0.0

# ===== CORS Settings =====
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# ===== Scheduler Settings =====
SCHEDULER_TIMEZONE=Asia/Kolkata
FOLLOW_UP_CHECK_INTERVAL_MINUTES=60

# ===== AI Model Settings =====
# Using Gemini 2.0 Flash - Best for civic complaint analysis
VISION_MODEL_NAME=gemini-2.0-flash-exp
REASONING_MODEL_NAME=gemini-2.0-flash-exp
AI_TEMPERATURE=0.7

# ===== File Upload Settings =====
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
STORAGE_BUCKET=complaint-images
